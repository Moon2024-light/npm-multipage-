<!DOCTYPE html>
<html lang="en">

    <%- include("../partials/head.ejs") %>

<body>
    <%- include("../partials/header.ejs") %>

    <main>
        <h1>Directors</h1>
        <div id="director-list">
            <% directors.forEach(director => { %> 
                <div class="director">
                    <a href="/directors/<%= director.id %>">
                        <img src="<%= director.image %>" alt="<%= director.name %>">
                        <p><%= director.name %></p>
                    </a>
                </div>
            <% }) %>
        </div>
    </main>

    <%- include("../partials/footer.ejs") %>
</body>
</html>
